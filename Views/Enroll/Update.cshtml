@model tangti.Models.Enroll.JoinUserData
@using tangti.Models
@{
    ViewBag.Title = "Update";
}

<h1>Update</h1>

<h4>Enrolls</h4>
<hr />
<h4>@ViewBag.Message</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post">
            <input type="hidden" asp-for="UserID" id="userIDInput" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" id="sendDataButton" />
            </div>
        </form>
    </div>
</div>

<script>
    document.getElementById('sendDataButton').addEventListener('click', function () {
        // Retrieve data from local storage
        var data = localStorage.getItem('id');
        document.getElementById("userIDInput").value = data;
    });
</script>