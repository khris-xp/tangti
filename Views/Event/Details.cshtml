@model tangti.Models.Event
@using tangti.Models
@{
    ViewBag.Title = "Edit";
}

<h1>Details</h1>

<h4>Event</h4>
<hr />
<h4>@ViewBag.Message</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="EventDate.StartDate" class="control-label"></label>
                <input asp-for="EventDate.StartDate" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="EventDate.EndDate" class="control-label"></label>
                <input asp-for="EventDate.EndDate" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="EventDate.StartDate" class="control-label"></label>
                <input asp-for="EventDate.StartDate" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="EventDate.EndDate" class="control-label"></label>
                <input asp-for="EventDate.EndDate" class="form-control" disabled />
            </div>
        </form>
        <a asp-action="Report" asp-route-id="@Model.Id">Report</a>
    </div>
</div>
