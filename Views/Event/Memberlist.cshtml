@model tangti.Models.Event ;
@{
    ViewData["Title"] = "Memberlist page";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto">
    <link rel="stylesheet" href="~/css/memberlist.css" asp-append-version="true" />
    <title>@ViewData["Title"] - tangti</title>
</head>



<body>
    <script>
        const EventId = "@Model.Id";
        const memberdata = fetch(`https://kmitltangti.azurewebsites.net/api/memberlist/${EventId}`, {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json'
            }
        }).then(response => {
            if (response.ok) {
                return response.json();
            }
        }).then(data => {
        @* console.log(data); *@
                document.getElementById("member-list-number").innerHTML = `All Members (${data.num_enrolls} / ${data.limit})`

            var container = document.getElementById("memberList");
            data.users.forEach((element, index) => {
                console.log(element, index);
                console.log(element);
                var cardDiv = document.createElement('div');
                cardDiv.classList.add('card');

                var imageElement = document.createElement('img');
                imageElement.src = element.imageProfile;
                imageElement.alt = element.fullName;

                var cardNameDiv = document.createElement('div');
                cardNameDiv.classList.add('card-name');
                cardNameDiv.textContent = element.fullName;

                cardDiv.appendChild(imageElement);
                cardDiv.appendChild(cardNameDiv);

                container.appendChild(cardDiv);
            });
        })
    </script>

    <div class="container">
        <div class="member_header">
            <h1 id="member-list-number">All Members</h1>
            <h2> Congratuations You are selected to be this team member</h2>
            <button class="button"> Contact </button>
        </div>
        <div class="card_list">
            <div id="memberList" class="card-list">
            </div>
        </div>
        <div class="pagination">
            <div class="pagebutton active"></div>
            <div class="pagebutton"></div>
            <div class="pagebutton"></div>
            <div class="pagebutton"></div>
        </div>
    </div>
</body>

<script>
    function handlePagination() {
        var buttons = document.querySelectorAll('.pagination .pagebutton');

        buttons.forEach(function (button, index) {
            button.addEventListener('click', function () {
                buttons.forEach(function (btn) {
                    btn.classList.remove('active');
                });
                button.classList.add('active');
                loadData(index + 1);
            });
        });
    }

    function loadData(pageIndex) {
        console.log('Loading data for page ' + pageIndex);
    }
    document.addEventListener('DOMContentLoaded', function () {
        handlePagination();
    });

    function getData() {
        fetch("https://kmitltangti.azurewebsites.net/api/enroll/getmember", {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                eventId: eventId,
            }),
        })
            .then((data) => {
                console.log(data);
            })
            .catch((error) => {
                console.error(error);
            });

    }
</script>
